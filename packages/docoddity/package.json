{
  "name": "docoddity",
  "version": "0.1.0",
  "description": "Static site generator using web components for open source libraries",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "docoddity": "./dist/bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ambient-labs/docoddity.git"
  },
  "scripts": {
    "clean": "wireit",
    "copy:assets": "wireit",
    "build:tsc": "wireit",
    "build:check": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "build:check": {
      "command": "path-exists ./dist/index.js && path-exists ./dist/index.d.ts "
    },
    "copy:assets": {
      "command": "cp ../../README.md ./README.md && cp ../../LICENSE ./LICENSE",
      "files": [
        "./package.json",
        "../../LICENSE",
        "../../README.md"
      ],
      "output": [
        "./README.md"
      ]
    },
    "clean": {
      "command": "rimraf ./dist"
    },
    "build:tsc": {
      "command": "tsc",
      "files": [
        "./src/**",
        "./package.json",
        "./vite.config.json",
        "./tsconfig.json"
      ],
      "output": [
        "./dist/**"
      ]
    },
    "build": {
      "command": "pnpm build:tsc && pnpm copy:assets"
    }
  },
  "keywords": [],
  "author": "Ambient Labs",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy-dev-server": "^2.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@docsearch/js": "3",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^11.0.0",
    "concurrently": "^8.2.2",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.12",
    "lit": "^3.1.3",
    "markdown-it-anchor": "^9.0.1",
    "mustache": "^4.2.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "path-exists-cli": "^2.0.0",
    "@11ty/eleventy": "3.0.0-beta.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "esbuild": "^0.20.2",
    "eslint-plugin-prettier": "^5.1.3",
    "playwright": "^1.45.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.17.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vitest": "^2.0.1",
    "wireit": "^0.14.4"
  }
}
